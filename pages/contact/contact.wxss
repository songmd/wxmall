.container {
    margin-top: 60rpx;
    margin-left: 30rpx;
    margin-right: 30rpx; 
  /* background-color: #F2f2f2; */
  min-height: 100%;
}

.signboard {
    display: flex;
    flex-direction: row;
    width: 100%;
    justify-content: space-between;
    align-items: center;
}

.board-title {
    font-size: 60rpx;
}

.board-desc {
    font-size: 28rpx;
    color: darkgrey;
}

.board-icon {
    width: 60rpx;
    height: 60rpx;
}

.delimiter {
    margin-top: 30rpx;
    border-top: 1px;
    border-top-style: dashed;
    border-top-color: whitesmoke;
    width: 100%;
}

.contact-info-bar {
    display: flex;
    flex-direction: row;
    width: 100%;
    align-items: center;
    margin-top: 50rpx;
}

.contact-info-text {
    width: 630rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
}

.contact-access-img {
    width: 40rpx;
    height: 40rpx;
}

.contact-icon-img {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.scroll-container {
    white-space: nowrap;
}

.scroll-item {
    width: 30%;
    height: 150rpx;
    margin: 10rpx;
    border: 1px;
    border-style: solid;
    border-color: ghostwhite;
}